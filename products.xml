                    <specification name="Waktu Terurai">3-6 bulan</specification>
                    <specification name"Tahan Air">Sedang</specification>
                </specifications>
                <benefits>
                    <benefit>Biodegradable</benefit>
                    <benefit>Food grade</benefit>
                    <benefit>Custom design</benefit>
                    <benefit>Mengurangi plastik</benefit>
                </benefits>
                <applications>
                    <application>Kemasan makanan</application>
                    <application>Kemasan produk organik</application>
                    <application>Kemasan e-commerce</application>
                </applications>
